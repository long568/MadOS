{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clear",
            "type": "shell",
            "command": "rm -rf cross-build",
            "problemMatcher": [ "$gcc" ],
            "group": "build"
        },
        {
            "label": "setup",
            "type": "shell",
            "command": "meson setup cross-build --cross-file cross-build.txt",
            "problemMatcher": [ "$gcc" ],
            "group": "build"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "meson compile -C cross-build",
            "problemMatcher": [ "$gcc" ],
            "group": "build"
        },
        {
            "label": "resetup",
            "dependsOn": ["clear", "setup"],
            "dependsOrder": "sequence",
            "problemMatcher": [ "$gcc" ],
            "group": "build"
        },
        {
            "label": "rebuild",
            "dependsOn": ["clear", "setup", "build"],
            "dependsOrder": "sequence",
            "problemMatcher": [ "$gcc" ],
            "group": "build"
        }
    ]
}
