{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "config",
            "type": "shell",
            "command": "sh tools/0config.sh",
            "auto": true
        },
        {
            "label": "build",
            "type": "shell",
            "command": "make all",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "group": "build"
        },
        {
            "label": "rebuild",
            "type": "shell",
            "command": "make rebuild",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
