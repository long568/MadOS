    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/uip-test",
            "args": [],
            "environment": [],
            "stopAtEntry": true,
            "externalConsole": false,
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "preLaunchTask": "build",
            "targetArchitecture": "arm",
            "miDebuggerServerAddress": "localhost:3333",
            
            "osx": {
                "miDebuggerPath": "arm-none-eabi-gdb"
            },
            "windows": {
                "sourceFileMap": {
                    "/cygdrive/d": "D:\\"
                },
                "miDebuggerPath": "arm-none-eabi-gdb.exe"
            },

            "setupCommands": [
                { "text": "file build/uip-test" },
                { "text": "monitor reset init" },
                { "text": "load" },
                { "text": "monitor reset halt" }
            ]
        }
    ]
}

