    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/uip-test",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "targetArchitecture": "arm",
            "launchCompleteCommand": "None",
            "miDebuggerPath": "arm-none-eabi-gdb",
            "preLaunchTask": "build",
            "setupCommands": [
                { "text": "file ${workspaceFolder}/build/uip-test" },
                { "text": "target extended-remote localhost:3333"},
                { "text": "monitor reset init" },
                { "text": "load" },
                { "text": "monitor reset halt" }
            ]
        }
    ]
}

