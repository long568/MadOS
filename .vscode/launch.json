    "configurations": [
        {
            "cwd": "${workspaceRoot}",
            "executable": "./build/uip-test",
            "name": "Debug Microcontroller",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "interface": "swd",
            "configFiles": [
                "interface/stlink-v2.cfg",
                "target/stm32f1x.cfg"
            ]
        }
    ]
}

